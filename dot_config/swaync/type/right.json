{
	"$schema": "/etc/xdg/swaync/configSchema.json",
	"positionX": "right",
	"positionY": "top",
	"control-center-width": 400,
  "control-center-margin-right": 8,
  "control-center-margin-top": 8,
  "control-center-margin-bottom": 8,
	"fit-to-screen": true,
	"control-center-height": 600,
  "notification-window-width": 400,
  "notification-2fa-action": false,
	"cssPriority": "user",
	"widgets": ["title", "inhibitor", "dnd", "notifications"],
	"widget-config": {
		"volume": {
			"label": "󰕾",
      "show-per-app": true,
      "expand-button-label": " 󰅀 ",
      "collapse-button-label": " 󰅃 "
		},
    "backlight": {
      "label": "󰌵",
      "device": "amdgpu_bl2"
    },
    "mpris": {
      "autohide": true,
      "blacklist": ["playerctld"]
    },
		"buttons-grid": {
			"buttons-per-row": 4,
			"actions": [
				{
					"label": "󰖩",
          "type": "toggle",
					"command": "kitty -1 nmtui",
          "update-command": "[ $(nmcli n) = 'enabled' ] && echo true || echo false"
				},
				{
					"label": "󰂯",
					"command": "blueman-manager"
				},
				{
					"label": "󰸉",
					"command": "waypaper"
				},	
        {
					"label": "",
          "type": "toggle",
					"command": "nightlight.sh",
					"update-command": "pgrep -x wlsunset && echo 'true' || echo 'false'"
				}
			]
		}
	}
}
