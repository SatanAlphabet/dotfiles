
timeout 300 'brightnessctl -s && brightnessctl s 1%' resume 'brightnessctl -r'
timeout 600 'loginctl lock-session'
timeout 900 'niri msg action power-off-monitors' resume 'niri msg action power-on-monitors'
timeout 1200 'systemctl suspend'

lock 'if ! pgrep -x hyprlock; then hyprlock && loginctl unlock-session; fi'
unlock 'notify-send "Session unlocked..." "Welcome back, ${USER}." -e -a "Session"'

before-sleep 'loginctl lock-session'
