{
	"layer": "top",
	"output": ["*"],
	"position": "left",
	"gap": 0,
	// "mode": "dock",
	"exclusive": true,
	"passthrough": false,
	"gtk-layer-shell": true,
	"reload_style_on_change": true,

	"modules-left": ["group/pill#top1", "custom/triangle-top"],
	"group/pill#top1": {
		"orientation": "inherit",
		"modules": ["group/tray-launcher", "custom/seperator", "niri/workspaces"]
	},
  "group/pill#top2": {
    "orientation": "inherit",
    "modules": ["niri/workspaces", "custom/triangle-top"]
  },
	"modules-center": [ "custom/triangle-top#2", "group/pill#center", "custom/triangle-bottom#2"],
  "group/pill#center": {
    "orientation": "inherit",
    "modules": ["wlr/taskbar"]
  },
	"modules-right": [
    "custom/triangle-bottom", "group/pill#bottom"
	],
	"group/tray-drawer": {
		"orientation": "inherit",
		"drawer": {
			"transition-left-to-right": true,
			"click-to-reveal": true
		},
		"modules": ["custom/drawer-arrow-up", "tray", "backlight", "pulseaudio", "custom/seperator"]
	},
  "group/tray-launcher": {
    "orientation": "inherit",
    "drawer": {
      "transition-left-to-right": true,
    },
    "modules": ["custom/launcher", "custom/powermenu", "custom/wallpaper", "custom/clipboard"]
  },
	"group/pill#bottom": {
		"orientation": "inherit",
		"modules": [
  		"group/tray-drawer",
  		"custom/sysupdate",
  		"mpris",
  		"battery",
  		"custom/swaync",
  		"niri/language",
      "custom/seperator",
  		"clock"
		]
	},
	"group/pill#clock": {
		"orientation": "inherit",
		"modules": ["clock"]
	},

	"custom/drawer-arrow-up": {
		"format": "\ueab7",
		"tooltip": false
	},
  "wlr/taskbar": {
    "icon-size": 12,
    "on-click": "activate"
  },
	"niri/window": {
		"rotate": 90,
    "max-length": 50,
    "icon": true,
    "icon-size": 18,
	},
	"niri/workspaces": {
		"format": "{icon}",
		"format-icons": {
			"default": "",
      // Named workspaces icon
      "browser": "",
      "chat": ""
		},
    "on-scroll-up": "niri msg action focus-workspace-up",
    "on-scroll-down": "niri msg action focus-workspace-down"
	},
	"niri/language": {
		"format-en": "US",
		"format-th": "TH",
		"on-click": "niri msg action switch-layout next"
	},
  "custom/seperator": {
    "format": "",
    "tooltip": false
  },
  "custom/triangle-top#2": {
    "format": "󰔶",
    "tooltip": false
  },
  "custom/triangle-bottom#2": {
    "format": "󰔶",
    "rotate": 180,
    "tooltip": false
  },
  "custom/triangle-bottom": {
    "format": "",
    "tooltip": false
  },
  "custom/triangle-top": {
    "format": "",
    "tooltip": false
  },
  "custom/seperator#bottom": {
    "format": "",
    "tooltip": false
  },
  "custom/seperator#top": {
    "format": "",
    "tooltip": false
  },
	"custom/launcher": {
		"format": "",
		"on-click": "~/.config/niri/scripts/rofilaunch.sh",
		"tooltip-format": "Application Launcher"
	},
  "custom/powermenu": {
    "format": "",
    "on-click": "~/.config/niri/scripts/logoutlaunch.sh",
    "tooltip-format": "Power Menu"
  },
  "custom/clipboard": {
    "format": "",
    "on-click": "~/.config/niri/scripts/cliphist-niri.sh -c",
    "tooltip-format": "Manage clipboard"
  },
  "custom/glyph-picker": {
    "format": "󱔁",
    "on-click": "~/.config/niri/scripts/glyph-picker.sh",
    "tooltip-format": "Glyph picker"
  },
  "custom/emoji-picker": {
    "format": "󰱱",
    "on-click": "~/.config/niri/scripts/emoji-picker.sh",
    "tooltip-format": "Emoji picker"
  },
  "custom/wallpaper": {
    "format":"󰸉",
    "on-click": "waypaper",
    "tooltip-format": "Change wallpaper"
  },
	"mpris": {
		"format": "{player_icon}",
		"rotate": 0,
		"format-paused": "{status_icon}",
    "tooltip-format": "{player}: PLAYING [{position}/{length}]\n{title} - {artist}",
    "tooltip-format-paused": "{player}: PAUSED [{position}/{length}]\n{title} - {artist}",
    "tooltip-format-stopped": "{player}: STOPPED",
		"player-icons": {
			"default": "",
			"mpv": "\ud83c\udfb5",
			"spotify": "\uf1bc"
		},
		"status-icons": {
			"paused": "\uf04c"
		},
		"max-length": 60,
		"dynamic-len": -1,
		"dynamic-importance-order": [
			"title",
			"position",
			"length",
			"artist",
			"album"
		],
		"interval": 1
	},
	"clock": {
		"format": "{:%H\n%M}",
    "format-alt": "{:%H\n%M\n\n%m\n%d}",
		"rotate": 0,
		"tooltip-format": "<span>{calendar}</span>",
		"calendar": {
			"mode": "month",
			"mode-mon-col": 3,
			"on-scroll": 1,
			"format": {
				"months": "<span color='#d8a657'><b>{}</b></span>",
				"weekdays": "<span color='#e78a4e'><b>{}</b></span>",
				"today": "<span color='#ea6962'><b>{}</b></span>"
			}
		},
		"actions": {
			"on-click-right": "mode",
			"on-click-forward": "tz_up",
			"on-click-backward": "tz_down",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},
	"custom/swaync": {
		"format": "{icon}",
		"tooltip": true,
		"format-icons": {
			"notification": "",
			"none": "",
			"dnd-notification": "",
			"dnd-none": "",
			"inhibited-notification": "",
			"inhibited-none": "",
			"dnd-inhibited-notification": "",
			"dnd-inhibited-none": "",
			"email-notification": "",
			"chat-notification": "󱋊",
			"warning-notification": "󱨪",
			"error-notification": "󱨪",
			"network-notification": "󱂇",
			"battery-notification": "󰁺",
			"update-notification": "󰚰",
			"music-notification": "󰝚",
			"volume-notification": "󰕿"
		},
		// "interval": "once",
		"return-type": "json",
		"exec-if": "which swaync-client", // This is to check if swaync daemon is running
		"exec": "pgrep -x swaync && swaync-client -swb",
		"on-click": "swaync-client -t -sw",
		"on-click-right": "swaync-client -d -sw",
		"escape": true
		// "on-click-right": "menu",
	},
	"tray": {
		"icon-size": 15,
		"spacing": 10
	},
	"battery": {
		"states": {
			"good": 95,
			"warning": 30,
			"critical": 20
		},
		"design-capacity": true,
		"format": "{icon}",
		"rotate": 270,
		"format-charging": "",
		"format-plugged": "",
		"format-warning": "<span foreground='#d8a657'>{icon}</span>",
		"format-critical": "<span foreground='#ea6962'>{icon}</span>",
		"format-charging-warning": "<span foreground='#d8a657'></span>",
		"format-charging-critical": "<span foreground='#ea6962'></span>",
		"format-plugged-warning": "<span foreground='#d8a657'></span>",
		"format-plugged-critical": "<span foreground='#ea6962'></span>",
		"format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "tooltip-format": "{capacity}% \n({timeTo})"
	},
	"pulseaudio": {
		"format": "{icon}",
		"rotate": 0,
		"format-muted": "",
		"tooltip-format": "{icon} {desc}: {volume}%",
		"on-click": "pavucontrol -t 3",
		"on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
		"scroll-step": 1,
		"format-icons": {
			"headphone": "",
			"hands-free": "",
			"headset": "",
			"phone": "",
			"portable": "",
			"car": "",
			"default": ["", "", ""]
		}
	},
	"backlight": {
		"rotate": 0,
		"format": "{icon}",
		"format-icons": ["", "", "", "", "", "", "", "", ""],
		"min-length": 1,
		"tooltip": true,
		"tooltip-format": "Backlight level: {icon} {percent}%",
		"on-scroll-up": "~/.config/niri/scripts/brightnesscontrol.sh + 1",
		"on-scroll-down": "~/.config/niri/scripts/brightnesscontrol.sh - 1"
	},
	"custom/sysupdate": {
		"format": "{icon}",
		"return-type": "json",
		"format-icons": {
			"has-updates": "󱧘",
			"updated": ""
		},
		"exec-if": "which waybar-module-pacman-updates",
		"exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 600 --no-zero-output",
		"on-click": "~/.config/niri/scripts/update.sh"
	}, 
  "bluetooth": {
    "format": "",
    "format-disabled": "",
    "format-connected": "",
    "format-connected-battery": "{icon}",
    // "format-connected-battery": "{icon} {device_alias}-{device_battery_percentage}%",
    "format-icons": ["󰥇", "󰤾", "󰤿", "󰥀", "󰥁", "󰥂", "󰥃", "󰥄", "󰥅", "󰥆", "󰥈"],
    // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device If this config option is not defined or none of the devices in the list are connected, it will fall back to showing the last connected device.
    "tooltip-format": "{controller_alias}\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{icon} {device_battery_percentage}%",
    "on-click": "blueman-manager"
  }
}
