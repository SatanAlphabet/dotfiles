{
	"network": {
		"on-click": "kitty -1 nmtui",
		"interval": 2
	},
	"bluetooth": {
		"on-click": "blueman-manager"
	},
	"niri/window": {
		"max-length": 50,
	},
	"niri/workspaces": {
		"on-scroll-up": "niri msg action focus-workspace-up",
		"on-scroll-down": "niri msg action focus-workspace-down",
    "on-click-right": "niri msg action toggle-overview"
	},
	"niri/language": {
		"on-click": "layout-toggle.sh next",
		"on-click-right": "layout-toggle.sh prev"
	},
	"custom/seperator-vertical": {
		"format": "",
		"tooltip": false
	},
	"custom/launcher": {
		"on-click": "rofilaunch.sh menu",
		"menu": "on-click-right",
		"menu-file": "~/.config/waybar/menu/launcher.xml",
		"menu-actions": {
			"cliphist": "clipboard.sh",
			"emoji": "emoji-picker.sh",
			"glyph": "glyph-picker.sh",
			"calc": "calc.sh",
			"lock": "loginctl lock-session",
			"reboot": "systemctl reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibetnate",
			"shutdown": "systemctl poweroff",
			"logout": "niri msg action quit -s",
			"wallpaper-random": "waypaper --random --backend swww",
			"wallpaper-select": "waypaper",
			"theme": "themechange.sh",
			"niri": "xdg-open https://github.com/YaLTeR/niri"
		},
	},
  "mpris": {
		"on-click": "mediacontrol.sh toggle",
		"on-click-right": "mediacontrol.sh next",
		"on-click-middle": "mediacontrol.sh prev",
		"interval": 1,
	},
	"clock": {
		"calendar": {
			"mode": "month",
			"mode-mon-col": 3,
			"on-scroll": 1,
			"format": {
				"months": "<b>{}</b>",
				"weekdays": "<b>{}</b>",
				"today": "<b>{}</b>"
			}
		},
		"actions": {
			"on-click-right": "mode",
			"on-click-forward": "tz_up",
			"on-click-backward": "tz_down",
			"on-scroll-up": "shift_up",
			"on-scroll-down": "shift_down"
		}
	},
	"custom/swaync": {
		"tooltip": true,
		"return-type": "json",
		"exec-if": "which swaync-client", // This is to check if swaync daemon is running
		"exec": "pgrep -x swaync && swaync-client -swb",
		"on-click": "swaync-client -t -sw",
		"on-click-right": "swaync-client -d -sw",
		"escape": true
	},
	"privacy": {
		"transition-duration": 250,
		"modules": [
			{
				"type": "screenshare",
				"tooltip": true,
			},
			{
				"type": "audio-in",
				"tooltip": true,
			}
		],
		"ignore-monitor": true,
		"ignore": [
			{
				"type": "audio-in",
				"name": "cava"
			},
			{
				"type": "screenshare",
				"name": "obs"
			}
		]
	},
	"battery": {
		"states": {
			"warning": 30,
			"critical": 15
		},
		"design-capacity": true,
	},
	"pulseaudio": {
		"on-scroll-up": "volumecontrol.sh + 1",
		"on-scroll-down": "volumecontrol.sh - 1",
		"on-click": "pavucontrol-qt -t 3",
		"on-click-right": "volumecontrol.sh toggle-mute",
		"scroll-step": 1,
	},
	"backlight": {
		"on-scroll-up": "brightnesscontrol.sh + 1",
		"on-scroll-down": "brightnesscontrol.sh - 1"
	},
	"custom/sysupdate": {
		"exec-if": "which waybar-module-pacman-updates",
		"exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 600 --no-zero-output",
		"on-click": "kitty --class 'sysupdate' --title 'System Update' sysupdate.sh"
	}
}
