#!/usr/bin/env zsh
# Directory navigation shortcuts
alias c='clear' \
    ..='cd ..' \
    ...='cd ../..' \
    .3='cd ../../..' \
    .4='cd ../../../..' \
    .5='cd ../../../../..' \
    mkdir='mkdir -p'

# Custom aliases
alias ff='fastfetch'
alias yay='paru'
export EDITOR=nvim
export BAT_THEME='ansi'

